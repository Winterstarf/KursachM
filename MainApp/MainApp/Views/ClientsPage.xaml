<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MainApp.Views.ClientsPage">
    <StackLayout>
        <ListView x:Name="ClientsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Details}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Add" Clicked="OnAddClientClicked" />
            <Button Text="Edit" Clicked="OnEditClientClicked" />
            <Button Text="Delete" Clicked="OnDeleteClientClicked" />
            <Button Text="View Orders" Clicked="OnViewOrdersClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
